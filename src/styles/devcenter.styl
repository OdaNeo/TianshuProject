@import 'common/index';

#ts_main_devcenter {
    width: 100%;

    .section-devcenter {
        width: 100%;
        height: 600px;
        background: #242424;
        position: relative;

        .devcenter-pic-main {
            width: 518px;
            height: 211px;
            margin: 171px auto 0 auto;
            background: url('@/assets/img/devcenter/shexiangtou.jpg') no-repeat center center;
            background-size: 100% 100%;
        }

        .devcenter-pic-left {
            position: absolute;
            left: 505px;
            top: 186px;
            width: 442px;
            height: 181px;
            background: url('@/assets/img/devcenter/shexiangtou001.jpg') no-repeat center center;
            background-size: 100% 100%;
            z-index: -1;
        }

        .devcenter-pic-right {
            position: absolute;
            right: 505px;
            top: 186px;
            width: 442px;
            height: 181px;
            background: url('@/assets/img/devcenter/shexiangtou002.jpg') no-repeat center center;
            background-size: 100% 100%;
            z-index: -1;
        }

        .devcenter_title {
            height: 27px;
            font-size: 20px;
            line-height: 34px;
            color: #FFFFFF;
            letter-spacing: 1px;
            margin-top: 33px;
            text-align: center;
        }

        .devcenter_btn {
            display: block;
            width: 180px;
            height: 48px;
            border: 1PX solid #FFFFFF;
            border-radius: 6px;
            color: #FFFFFF;
            margin: 30px auto 0 auto;
            background-color: #242424;
        }
    }

    .section_kuaisurs {
        width: 100%;
        background: #FFFFFF;
        height: 653px;
        position: relative;

        .kuaisurs_title {
            position: absolute;
            height: 36px;
            font-size: 36px;
            line-height: 36px;
            color: #101426;
            letter-spacing: 1px;
            top: 60px;
            left: 50%;
            transform: translateX(-50%);

            &:after {
                title_after();
            }
        }

        .kuaisurs_item {
            width: 1350px;
            height: 440px;
            margin: 157px auto;
            overflow: hidden;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;

            .itemlist {
                width: 350px;
                height: 262px;

                .icon {
                    width: 100px;
                    height: 100px;
                    background: #3366FF;
                    border-radius: 50%;
                    margin: 0 auto;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }

                .title {
                    font-size: 24px;
                    font-weight: 400;
                    color: #101426;
                    margin-top: 30px;
                    text-align: center;
                }

                .detail {
                    width: 260px;
                    font-size: 14px;
                    line-height: 24px;
                    color: #101426;
                    margin: 20px auto 0 auto;
                    text-align: center;
                }

                #icon_item_1 {
                    width: 63px;
                    height: 41px;
                    background: url('@/assets/img/devcenter/z938.svg') no-repeat center center;
                    background-size: 100% 100%;
                }

                #icon_item_2 {
                    width: 60px;
                    height: 47px;
                    background: url('@/assets/img/devcenter/z944.svg') no-repeat center center;
                    background-size: 100% 100%;
                }

                #icon_item_3 {
                    width: 53px;
                    height: 53px;
                    background: url('@/assets/img/devcenter/z941.svg') no-repeat center center;
                    background-size: 100% 100%;
                }

                #icon_item_4 {
                    width: 63px;
                    height: 48px;
                    background: url('@/assets/img/devcenter/z947.svg') no-repeat center center;
                    background-size: 100% 100%;
                }
            }
        }
    }

    .section_yanshihuanjing {
        width: 100%;
        height: 560px;
        background: #F4F4F4;
        overflow: hidden;

        .yanshihuanjing_title {
            font-size: 36px;
            color: #101426;
            margin-top: 60px;
            text-align: center;
            position: relative;

            &:after {
                title_after();
            }
        }

        .yanshihuanjing_item {
            margin: 148px auto 0px auto;
            height: 180px;
            width: 1240px;
            display: flex;
            justify-content: space-between;

            .itemlist {
                width: 340px;
                height: 180px;
                background: #E2E2E2;
                border-radius: 10px;
            }
        }
    }

    .section_search {
        width: 100%;
        height: 100px;
        background: #FFFFFF;
        overflow: hidden;

        .section_search_container {
            font-size: 18px;
            width: 1009px;
            border: 1PX solid #999999;
            line-height: 48px;
            vertical-align: top;
            text-align: center;
            margin: 26px auto 0px auto;
            border-radius: 6px;
            overflow: hidden;
            position: relative;

            input {
                width: 100%;
                line-height: 48px;
                outline: none;
                border: none;

                &:focus {
                    border: none;
                }

                &::-webkit-input-placeholder {
                    color: #FFFFFF;
                }

                &:-moz-placeholder {
                    color: #FFFFFF;
                }

                &::-moz-placeholder {
                    color: #FFFFFF;
                }
            }

            #search_icon {
                position: absolute;
                width: 28px;
                height: 28px;
                background: url('@/assets/img/devcenter/z935.svg') no-repeat center center;
                background-size: 100% 100%;
                right: 16px;
                top: 8px;
            }
        }
    }
}
