@import 'normalize.css/normalize.css';

html {
  overflow-x: hidden;
  overflow-y: scroll;
  font-size: 100PX;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
}

/* 火狐滚动条 */
* {
  scrollbar-color: #e5e5e5 #f7f7f9;
  scrollbar-width: thin;
}

/* chrome 滚动条 */
::-webkit-scrollbar {
  background: #f7f7f9;
  transition: all 0.3s ease-in-out;
  width: 7px;
  height: 7px;
}

::-webkit-scrollbar-track-piece {
  background: #ffffff;
}

::-webkit-scrollbar-thumb {
  border-radius: 50px;
  background: #d4d4d4;
}

p {
  margin: 0px;
}

h1, h2, h3, h4, h5 {
  font-weight: normal;
  margin: 0;
}

em, i {
  font-style: normal;
}

ol, ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

a {
  text-decoration: none;
  color: inherit;
}

button {
  outline: none;
  padding: 0;
}

input {
  outline: none;
  padding: 0;
}

img {
  border: none;
  vertical-align: top;
}
