html {
  overflow-x: hidden;
  overflow-y: scroll;
}

body {
  font-family: 'Microsoft YaHei' !important;
}

p {
  margin: 0px;
}

h1, h2, h3, h4, h5 {
  font-weight: normal;
  margin: 0;
}

em, i {
  font-style: normal;
}

ol, ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

a {
  text-decoration: none;
  color: inherit;
}

button {
  outline: none;
  padding: 0;
}

input {
  outline: none;
  padding: 0;
}

img {
  border: none;
  vertical-align: top;
}

// ScrollReveal动画夹层
.sr-animate-container {
  width: 100%;
  height: 100%;
  position: absolute;
}